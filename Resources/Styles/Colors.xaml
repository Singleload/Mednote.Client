<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Application Colors -->
    <Color x:Key="PrimaryColor">#2979FF</Color>
    <Color x:Key="PrimaryLightColor">#75A7FF</Color>
    <Color x:Key="PrimaryDarkColor">#004ECB</Color>

    <Color x:Key="SecondaryColor">#5C6BC0</Color>
    <Color x:Key="SecondaryLightColor">#8E99F3</Color>
    <Color x:Key="SecondaryDarkColor">#26418F</Color>

    <Color x:Key="AccentColor">#00B8D4</Color>
    <Color x:Key="SuccessColor">#00C853</Color>
    <Color x:Key="WarningColor">#FFAB00</Color>
    <Color x:Key="ErrorColor">#FF5252</Color>
    <Color x:Key="NeutralColor">#607D8B</Color>

    <Color x:Key="BackgroundLightColor">#F5F5F5</Color>
    <Color x:Key="BackgroundDarkColor">#263238</Color>

    <Color x:Key="RecordingColor">#E53935</Color>
    <Color x:Key="PausedColor">#FFC107</Color>
    <Color x:Key="StoppedColor">#4CAF50</Color>

    <!-- SolidColorBrushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}"/>

    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="SecondaryLightBrush" Color="{StaticResource SecondaryLightColor}"/>
    <SolidColorBrush x:Key="SecondaryDarkBrush" Color="{StaticResource SecondaryDarkColor}"/>

    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    <SolidColorBrush x:Key="NeutralBrush" Color="{StaticResource NeutralColor}"/>

    <SolidColorBrush x:Key="BackgroundLightBrush" Color="{StaticResource BackgroundLightColor}"/>
    <SolidColorBrush x:Key="BackgroundDarkBrush" Color="{StaticResource BackgroundDarkColor}"/>

    <SolidColorBrush x:Key="RecordingBrush" Color="{StaticResource RecordingColor}"/>
    <SolidColorBrush x:Key="PausedBrush" Color="{StaticResource PausedColor}"/>
    <SolidColorBrush x:Key="StoppedBrush" Color="{StaticResource StoppedColor}"/>

</ResourceDictionary>